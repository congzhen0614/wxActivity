.get-packet
  .packet-top
    display block
    width 100%
  .packet-content
    padding 0.3rem 1rem
    .packet-mobile
      width 100%
      height 1.2rem
      color #232121
      font-size 0.36rem
      text-align center
      border-radius 10px
      margin-bottom 0.3rem
      background rgba(244, 243, 249, 1)
      border: 1px solid rgba(196, 194, 208, 1)
      outline none
    .packet-mobile::-webkit-input-placeholder
      font-size #C4C2D0
    .click-get
      display block
      width 100%
      height 1.2rem
      text-align center
      line-height 1.3rem
      letter-spacing 0.01rem
      background rgba(248, 189, 72, 1)
      box-shadow 0px 5px 0px 0px rgba(206, 158, 63, 1)
      margin-bottom 0.4rem
      border-radius 10px
      font-size 0.44rem
      color #64522C
    .no-phone
      color #DAD2C2
      background rgba(255, 249, 236, 1)
      box-shadow 0px 5px 0px 0px rgba(231, 226, 214, 1)
    .packet-rule
      display block
      width 1.64rem
      height 0.48rem
      text-align center
      line-height 0.55rem
      background rgba(246, 106, 106, 1)
      color rgba(255, 255, 255, 1)
      margin-bottom 0.3rem
      border-radius 0.1rem
      font-size 0.28rem
      font-weight 400
    .rule-content
      font-weight 400
      font-size 0.24rem
      line-height 0.38rem
      letter-spacing 0.01rem
      color rgba(196, 194, 208, 1)






