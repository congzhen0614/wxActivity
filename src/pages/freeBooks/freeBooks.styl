.free-book
  .free-book-search
    box-shadow 0px 1px 3px 0px rgba(0, 0, 0, 0.15)
    background-color #ffffff
    position fixed
    z-index 9999
    height 44px
    width 100%
    left 0
    top 0
    > div
      width 90%
      margin 0 auto
      height 34px
      margin-top 5px
      border-radius 34px
      background-color #F3F4F5
      display flex
      justify-content flex-start
      > input
        width 90%
        height 100%
        outline none
        color #C6C6C6
        padding 0 0.3rem
        font-size 0.28rem
        background-color rgba(0, 0, 0, 0)
      > input::-webkit-input-placeholder
        color #C6C6C6
      > div
        height 100%
        width 10%
        position relative
        > img
          position absolute
          width 0.28rem
          height 0.28rem
          right 0.3rem
          top 50%
          margin-top -0.14rem
  .free-book-head
    padding 0.32rem
    pading-bottom 0
    .free-book-title
      color #333333
      font-weight 500
      text-align center
      font-size 0.36rem
      line-height 0.54rem
      letter-spacing 0.5px
    .free-book-subhead
      color #888888
      font-weight 500
      text-align center
      font-size 0.24rem
      line-height 0.36rem
      letter-spacing 0.5px
  .free-book-list
    margin-bottom 50px
