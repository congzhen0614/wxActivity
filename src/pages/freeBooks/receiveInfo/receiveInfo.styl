.receive-info
  height 100%
  padding-bottom 50px
  background-color #F0F0F0
  > p
    color #F8BD48
    padding 0.32rem
    padding-bottom 0
    font-size 0.28rem
  > ul
    padding-top 8px
    > li
      background-color #ffffff
      position relative
      font-size 0.28rem
      margin-bottom 1px
      padding 0 0.32rem
      line-height 1rem
      height 1rem
      display flex
      justify-content space-between
      .info-title
        color #333333
      .info-content
        color #999999
      > img
        margin-top -0.14rem
        position absolute
        height 0.28rem
        width 0.16rem
        right 0.32rem
        top 50%
      > input
        color #999999
        outline none
      > input::-webkit-input-placeholder
        color #999999
  .info-head
    > li
      .info-title
        width 20%
        color #333333
      .info-content
        width 80%
        color #999999
        text-align right
        padding-right 0.48rem
