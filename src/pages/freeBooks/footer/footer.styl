.free-book-footer
  position fixed
  left 0
  bottom 0
  width 100%
  height 50px
  display flex
  background-color #ffffff
  justify-content space-between
  box-shadow 0px -2px 5px 0px rgba(0, 0, 0, 0.1)
  .footer-right
    width 33%
    height 50px
    color #ffffff
    line-height 50px
    text-align center
    font-size 0.32rem
    background linear-gradient(315deg, rgba(254,122,86,1) 0%, rgba(255, 80, 80, 1) 100%);
  .footer-left
    width 67%
    display flex
    padding 0 0.32rem
    justify-content space-between
    .footer-price
      height 50px
      line-height 50px
      font-size 0.24rem
      color #333333
      .price
        margin-left 5px
        color #F8BD48
        .big
          font-size 0.48rem
          vertical-align baseline
    .footer-number
      height 50px
      color #999999
      line-height 50px
      font-size 0.28rem
      > span
        color #F8BD48
        margin-left 5px
        vertical-align baseline
